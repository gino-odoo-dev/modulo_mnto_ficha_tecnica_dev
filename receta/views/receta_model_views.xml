<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="receta_fichatecnica_view_tree" model="ir.ui.view">
            <field name="name">receta.fichatecnica.view.tree</field>
            <field name="model">receta.fichatecnica</field>
            <field name="arch" type="xml">
                <tree string="Ficha Tecnica" editable="bottom" delete="true">
                    <field name="temporadas_id"/>
                    <field name="articulos_id"/>
                    <button name="unlink" type="object" string="Eliminar" class="btn-danger"/>
                    <button name="success_action" type="object" string="Success" class="btn-success"/>
                </tree>
            </field>
        </record>
        <record id="receta_fichatecnica_view_form" model="ir.ui.view">
            <field name="name">receta.fichatecnica.view.form</field>
            <field name="model">receta.fichatecnica</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Ficha Tecnica">
                    <sheet>
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <group string="Ficha Tecnica">
                                    <field name="temporadas_id" class="field" style="width: 15px;"/>
                                    <field name="articulos_id" class="field"/>
                                    <field name="inicio_name"/>
                                    <field name="fin_name"/>
                                    <field name="state" invisible="1" class="field"/>
                                </group>
                            </div>
                        </div>
                        <notebook>
                            <page string="Componentes">
                                <field name="componentes_ids">
                                    <tree editable="bottom" create="true" delete="true">
                                        <field name="articulo_id" class="field" options="{'always_reload': True}"/>
                                        <field name="codigosecuencia_id" options="{'no_create': True}"/>
                                        <field name="componente_id" widget="many2one" options="{'no_create': False}"/>
                                        <field name="name" string="Nombre Componente" readonly="0"/>
                                        <field name="descripcion" readonly="0"/>
                                        <field name="umedida" readonly="0"/>
                                        <field name="compra_manufactura_id" readonly="0"/>
                                        <field name="cantidad_id" readonly="0"/>
                                        <field name="factor_perdida_id" readonly="0"/>
                                        <field name="costo_unitario_id" readonly="0"/>
                                        <field name="costo_ampliado_id" readonly="0"/>
                                        <field name="departamento_id" readonly="0"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Copia Ficha Tecnica">
                                <group>
                                    <field name="part_o" string="Articulo Origen" class="field"/>
                                    <field name="m_numero_color" class="field"/>
                                    <field name="numero_inicio_id" string="Numero Inicio" class="field"/>
                                    <field name="numero_fin_id" string="Numero Fin" class="field"/>
                                    <field name="part_d" string="Articulo Destino" class="field"/>
                                    <button name="next_button" string="Duplicar" type="object" class="btn-primary btn-next-update" invisible="not articulos_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>
        <record id="action_receta_fichatecnica" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Ficha TÃ©cnica</field>
            <field name="res_model">receta.fichatecnica</field>
            <field name="view_mode">form,tree</field>
        </record>

        <menuitem id="menu_receta_fichatecnica" name="Ficha Productos" parent="mrp.menu_mrp_root" action="action_receta_fichatecnica" sequence="10"/>
    </data>
</odoo>